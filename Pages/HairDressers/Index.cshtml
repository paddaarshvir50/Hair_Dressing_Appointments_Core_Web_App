@page
@model Hair_Dressing_Appointments_Core_Web_App.Pages.HairDressers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Hair Dressers</h1>

<p>
    <a class="btn btn-outline-info"  asp-page="Create">+ Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HairDresser[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HairDresser[0].IsPermanent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HairDresser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPermanent)
            </td>
            <td>
                <a class="btn btn-outline-info" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-info" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
